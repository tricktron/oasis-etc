#!/bin/rc

path=/bin

umask 022

mount -t proc none /proc
mount -t devtmpfs none /dev

mkdir /dev/pts
mkdir /dev/shm
mount -a

modprobe input
modprobe mousedev
modprobe usbcore
modprobe xhci_hcd
modprobe usbhid
modprobe hid_generic
modprobe fuse 

/libexec/applyperms
/libexec/applyperms -d /etc

/etc/rc.local

exec perpboot /etc/perp
