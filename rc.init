#!/bin/rc

path=/bin

umask 022

mount -t proc none /proc
mount -t devtmpfs none /dev

mkdir /dev/pts
mkdir /dev/shm
mount -a

/libexec/applyperms
/libexec/applyperms -d /etc

modprobe fuse

/etc/rc.local

modprobe usbcore
modprobe mousedev
modprobe hid

# scan hardware and load needed kernel modules
find /sys -name modalias | xargs sort -u | xargs -n 1 modprobe

exec perpboot /etc/perp
