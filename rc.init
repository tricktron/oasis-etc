#!/bin/rc

path=/bin

umask 022

mount -t proc none /proc
mount -t sysfs none /sys
# scan hardware and load needed kernel modules
find /sys -name modalias -print0 | xargs -0 sort -u | while read ma; do
    modprobe -v "$ma"
done

mount -t devtmpfs none /dev

mkdir /dev/pts
mkdir /dev/shm
mount -a

/libexec/applyperms
/libexec/applyperms -d /etc

/etc/rc.local

exec perpboot /etc/perp
