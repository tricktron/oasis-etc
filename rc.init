#!/bin/rc

path=/bin

umask 022

mount -t proc none /proc
mount -t devtmpfs none /dev

mkdir /dev/pts
mkdir /dev/shm
mount -a

/libexec/applyperms
/libexec/applyperms -d /etc

modprobe fuse
modprobe usbcore
modprobe usbhid
modprobe mousedev
modprobe hid_generic
modprobe xhci_hcd
modprobe hid

/etc/rc.local

exec perpboot /etc/perp
